<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="space-simulator">
    <Sequence>
      <LocalSensingNode/>
      <Fallback>
        <IsFinishedTask/>
        <Sequence>
          <Fallback>
            <IsHoldingItem/>
            <Sequence>
              <Fallback>
                <IsArrivedAtShip/>
                <GoToShip/>
              </Fallback>
              <PickItem/>
            </Sequence>
          </Fallback>
          <Fallback>
            <IsArrivedAtDestination/>
            <GoToDestination/>
          </Fallback>
          <PlaceItem/>
        </Sequence>
      </Fallback>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="GoToDestination"
            editable="true"/>
    <Action ID="GoToShip"
            editable="true"/>
    <Condition ID="IsArrivedAtDestination"
               editable="true"/>
    <Condition ID="IsArrivedAtShip"
               editable="true"/>
    <Condition ID="IsFinishedTask"
               editable="true"/>
    <Condition ID="IsHoldingItem"
               editable="true"/>
    <Action ID="LocalSensingNode"
            editable="true"/>
    <Action ID="PickItem"
            editable="true"/>
    <Action ID="PlaceItem"
            editable="true"/>
  </TreeNodesModel>

</root>
