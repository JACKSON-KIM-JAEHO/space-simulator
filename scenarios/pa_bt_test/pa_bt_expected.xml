<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="main_tree">
    <Sequence>
      <LocalSensingNode/>
      <Fallback>
        <IsMissionCompleted/>
        <Sequence>
          <Fallback>
            <IsTaskNearby/>
            <Sequence>
              <Fallback>
                <IsTaskAssigned/>
                <Sequence>
                  <Fallback>
                    <IsTaskSensored/>
                    <ExploreTask/>
                  </Fallback>
                  <AssignTask/>
                </Sequence>
              </Fallback>
              <MoveToTask/>
            </Sequence>
          </Fallback>
          <CompleteTask/>
        </Sequence>
      </Fallback>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="AssignTask"/>
    <Action ID="CompleteTask"/>
    <Action ID="ExploreTask"/>
    <Condition ID="IsMissionCompleted"
               editable="true"/>
    <Condition ID="IsTaskAssigned"/>
    <Condition ID="IsTaskNearby"/>
    <Condition ID="IsTaskSensored"
               editable="true"/>
    <Action ID="LocalSensingNode"
            editable="true"/>
    <Action ID="MoveToTask"/>
  </TreeNodesModel>

</root>
