<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="space-simulator">
    <ReactiveSequence>
      <GatherLocalInfo/>
      <ReactiveSequence>
        <ReactiveFallback>
          <AssignTask/>
          <Explore/>
        </ReactiveFallback>
        <ReactiveFallback>
          <IsTaskCompleted/>
          <ReactiveSequence>
            <ReactiveFallback>
              <IsArrivedAtTarget/>
              <MoveToTarget/>
            </ReactiveFallback>
            <ExecuteTask/>
          </ReactiveSequence>
        </ReactiveFallback>
      </ReactiveSequence>
    </ReactiveSequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="AssignTask"
            editable="true"/>
    <Action ID="ExecuteTask"
            editable="true"/>
    <Action ID="Explore"
            editable="true"/>
    <Action ID="GatherLocalInfo"
            editable="true"/>
    <Condition ID="IsArrivedAtTarget"
               editable="true"/>
    <Condition ID="IsTaskCompleted"
               editable="true"/>
    <Action ID="MoveToTarget"
            editable="true"/>
  </TreeNodesModel>

</root>
